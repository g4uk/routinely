<% if @listener.persisted? %>
  $(".listener-form[data-sensor-id=<%= @listener.sensor.id %>]").replaceWith("<%= j render('routines/listener', { listener: @listener }) %>");
<% else %>
  $(".listener-form[data-sensor-id=<%= @listener.sensor.id %>]").replaceWith("<%= j render('routines/sensor', { sensor: @listener.sensor }) %>");
<% end %>
