= f.simple_fields_for :payload do |p|
  = p.input :recipient, input_html: { value: f.object.payload&.[]("recipient") || current_user.email }
  = p.input :subject, input_html: { value: f.object.payload&.[]("subject") }
  = p.input :body, as: :text, input_html: { value: f.object.payload&.[]("body") }
